{
  "version": 3,
  "sources": {
    "mapbox": {
      "type": "vector",
      "url": "tiles/{z}-{x}-{y}.vector.pbf",
      "tileSize": 512,
      "maxZoom": 14
    }
  },
  "sprite": "sprites/outdoors",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "style": {
        "background-color": "green"
      }
    },
    {
      "id": "poi",
      "source": "mapbox",
      "source-layer": "poi_label",
      "type": "icon",
      "filter": { "maki": "restaurant" },
      "render": {
        "icon-image": "{maki}-12",
        "icon-size": 12,
        "icon-allow-overlap": true
      }
    }
  ]
}
